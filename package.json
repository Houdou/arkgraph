{
  "private": true,
  "name": "arkgraph",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "start": "per-env",
    "start:production": "npm run -s serve",
    "start:development": "npm run -s dev",
    "build": "preact build --no-prerender",
    "serve": "preact build --no-prerender && preact serve --port 3000",
    "dev": "preact watch --port 3000",
    "lint": "eslint src"
  },
  "eslintConfig": {
    "extends": "eslint-config-synacor",
    "rules": {
      "brace-style": [
        "error",
        "1tbs"
      ],
      "camelcase": "off",
      "comma-dangle": [
        "error",
        "always-multiline"
      ],
      "react/jsx-no-bind": "disable",
      "react/display-name": "disable"
    }
  },
  "eslintIgnore": [
    "build/*"
  ],
  "devDependencies": {
    "axios": "^0.18.0",
    "cheerio": "^1.0.0-rc.3",
    "eslint": "^4.9.0",
    "eslint-config-synacor": "^2.0.2",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^21.2.1",
    "per-env": "^1.0.2",
    "preact-cli": "^3.0.0-next.19",
    "preact-render-spy": "^1.2.1"
  },
  "dependencies": {
    "classnames": "^2.2.6",
    "fuse.js": "^3.4.4",
    "preact": "^10.0.0-beta.1",
    "preact-router": "^3.0.0"
  }
}
